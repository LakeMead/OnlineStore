@model SelectListItem

@{
    var id = int.Parse(Model.Text);
    var value = Model.Text;
}
<div class="row">
    <div class="col-md-4">
        @Html.LabelFor(m => m)
    </div>
    <div class="col-md-8">
        @Html.DropDownListFor(m => m, (IEnumerable<SelectListItem>)ViewBag.ListItem, new { @class = "form-control" })
    </div>
    <div>
        @Html.ValidationMessageFor(m => m)
    </div>
</div>
<br />
