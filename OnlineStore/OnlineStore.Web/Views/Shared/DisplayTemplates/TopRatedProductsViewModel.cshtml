@model OnlineStore.Web.Models.ViewModels.Home.TopRatedProductsViewModel

<div class="panel panel-primary">
    <header class="panel-heading">
        @Html.DisplayFor(m => m.Name)
    </header>
    <div class="panel-body">
        <img src="../../@Html.DisplayFor(m => m.ImagePath)" alt="@Html.DisplayFor(m => m.Name)" width="240" height="240">
    </div>
    <div class="panel-body text-justify">Discount: @Html.DisplayFor(m => m.Rating) %</div>
    <footer class="panel-footer">
        <strong>$@Html.DisplayFor(m => m.Price)</strong>
        <a href="#" class="pull-right">View</a>
    </footer>
</div>