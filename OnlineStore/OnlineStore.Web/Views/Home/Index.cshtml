@model OnlineStore.Web.Models.ViewModels.Home.HomeViewModel

@{
    ViewBag.Title = "Online Store";
}

<div class="jumbotron col-xs-12 col-md-6 col-lg-3">
    <h3>Newest</h3>
    @foreach (var product in Model.NewestProducts)
    {
        @Html.DisplayFor(p => product.Name);
        <br />
        @Html.DisplayFor(p => product.Id);
        <br />
        <hr />
    }
</div>

<div class="jumbotron col-xs-12 col-md-6 col-lg-3">
    <h3>Discounted</h3>
    @foreach (var product in Model.DiscountedProducts)
    {
        <p>Name: </p>
        @Html.DisplayFor(p => product.Name);
        <br />
        <p>Id: </p>
        @Html.DisplayFor(p => product.Id);
        <br />
        <p>Discount Percent: </p>
        @Html.DisplayFor(p => product.Discount.Percent);
        <br />
    <hr />
    }
</div>

<div class="jumbotron col-xs-12 col-md-6 col-lg-3">
    <h3>Most Popular</h3>
    @foreach (var product in Model.MostPopularProducts)
    {
        <p>Name: </p>
        @Html.DisplayFor(p => product.Name);
        <br />
        <p>Id: </p>
        @Html.DisplayFor(p => product.Id);
        <br />
        <p>Rating: </p>
        @Html.DisplayFor(p => product.Rating);
        <br />
    <hr />
    }
</div>

<div class="jumbotron col-xs-12 col-md-6 col-lg-3">
    <h3>Top Rated</h3>
    @foreach (var product in Model.TopRatedProducts)
    {
        @Html.DisplayFor(p => product.Name);
        <br />
        @Html.DisplayFor(p => product.Id);
        <br />
    <hr />
    }
</div>