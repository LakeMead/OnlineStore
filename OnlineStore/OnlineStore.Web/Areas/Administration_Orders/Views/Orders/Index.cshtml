@using OnlineStore.Web.Infrastructure.Helpers
@using OnlineStore.Web.Models.ViewModels.Administration_Orders

@{
    const string ControllerName = "Orders";
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@(Html.ReadAndDeleteGrid<OrderDetailsGridViewModel>
    (ControllerName, m => m.Id, columns =>
    {
        columns.Bound(u => u.Id);
        columns.Bound(u => u.CityName);
        columns.Bound(u => u.FistName);
        columns.Bound(u => u.LastName);
        columns.Bound(u => u.OrderStatus);
        columns.Bound(u => u.ProductCount);
        columns.Command(
        command =>
        {
            command.Destroy();
        });
    }))

@* TODO: Add scripts separate files*@
<script type="text/javascript">
        function errorHandler(e) {
            if (e.errors) {
                var message = "Errors:\n";
                $.each(e.errors, function (key, value) {
                    if ('errors' in value) {
                        $.each(value.errors, function () {
                            message += this + "\n";
                        });
                    }
                });
                alert(message);
            }
        }
</script>