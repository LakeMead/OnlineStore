@using System.Web.Mvc.Expressions
@using OnlineStore.Web.Areas.Administration_Products.Controllers
@model OnlineStore.Web.Models.ViewModels.AdministrationProducts.Products.UpdateImagesInputModel

@{
    ViewBag.Title = "AddImagesToProduct";
}

<h2>AddImagesToProduct</h2>

@using (Html.BeginForm<ProductsController>(c => c.AddImagesToProduct(null), FormMethod.Post, null, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Legend</legend>
        <div class="form-group text-center">
            <div class="col-lg-3">@Html.LabelFor(m => m.ProductId)</div>
            <div class="col-lg-9">@Html.TextBoxFor(m => m.ProductId)</div>

            <div>@Html.ValidationMessageFor(m => m.ProductId)</div>
        </div>
        <div class="form-group text-center">
            <div class="col-lg-3">@Html.LabelFor(m => m.Images)</div>
            <div class="col-lg-9">@Html.EditorFor(m => m.Images)</div>
            <div>@Html.ValidationMessageFor(m => m.Images)</div>
        </div>
        <div class="form-group text-center">
            <div class="col-lg-12">
                <input type="reset" value="Cancel" class="btn btn-default" />
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>
    </fieldset>
}